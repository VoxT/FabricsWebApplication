@model FabricsFactoryMethodPattern.Entities.Prices
@{
    ViewBag.Title = "Register";
}

<hgroup class="title">
    <h2>Add price for customer</h2>
</hgroup>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

      <div class="col-md-8 col-md-ofset-2">
        <form  class="form-horizontal" role="form">
              <div class="form-group">
                <label class="col-sm-3">CustomerId:</label>
                <div class="col-sm-3">
                   @Html.DropDownList("id",(IEnumerable<SelectListItem>)ViewData["CustomerId"], new { @class = "form-control"})
                </div>
              </div>
               <br />
              <div class="form-group">
                <label class="col-sm-3" for="price">Price:</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Price, new { @class = "form-control", @id = "price",@type = "number" })
                </div>
              </div>
               <br />
              <div class="form-group">
                <label class="col-sm-3">FabricsColorName:</label>
                <div class="col-sm-3">
                   @Html.DropDownListFor(m => m.FabricsColorId,(IEnumerable<SelectListItem>)ViewData["fabricsColorId"], new { @class = "form-control"})
                </div>
              </div>
               <br />
               <div class="form-group">
                <label class="col-sm-3" for="time">Time:</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Time, new { @class = "form-control", @id = "time", @type = "date" })
                </div>
              </div>
               <br />
            <br/>
                <input type="submit" value="Add" class="btn btn-default pull-right"/>
        </form>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
