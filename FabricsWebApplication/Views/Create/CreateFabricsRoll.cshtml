@model FabricsFactoryMethodPattern.Entities.FabricsRoll
@{
    ViewBag.Title = "FabricsRoll";
}

<hgroup class="title">
    <h2>Create a @ViewBag.Title</h2>
</hgroup>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

     <div class="col-md-8 col-md-ofset-2">
        <form  class="form-horizontal" role="form">
              <div class="form-group">
                <label class="col-sm-3">PurchaseInvoiceId:</label>
                <div class="col-sm-9">
                    @Html.DropDownListFor(m => m.PurchaseInvoiceId,(IEnumerable<SelectListItem>)ViewData["purchaseInvoiceId"])
                </div>
              </div>
               <br />
              <div class="form-group">
                <label class="col-sm-3" >FabricsColorName:</label>
                <div class="col-sm-9">
                     @Html.DropDownListFor(m => m.FabricsColorId,(IEnumerable<SelectListItem>)ViewData["fabricsColorId"])
                </div>
              </div>
               <br />
              <div class="form-group">
                <label class="col-sm-3" >FabricsPlotsId:</label>
                <div class="col-sm-9">
                     @Html.DropDownListFor(m => m.PlotsId,(IEnumerable<SelectListItem>)ViewData["fabricsPlotsId"])
                </div>
              </div>
               <br />
              <div class="form-group">
                <label class="col-sm-3" for ="length" >Length:</label>
                <div class="col-sm-9">
                     @Html.TextBoxFor(m => m.Length, new {@class = "form-control",@id = "length" })
                </div>
              </div>
               <br />
            <br/>
                <input type="submit" value="Create" class="btn btn-default pull-right"/>
        </form>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
