@model FabricsFactoryMethodPattern.Entities.SalesInvoice
@{
    ViewBag.Title = "PurchaseInvoice";
}

<hgroup class="title">
    <h2>Create a @ViewBag.Title</h2>
</hgroup>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="col-md-8 col-md-ofset-2">
        <form  class="form-horizontal" role="form">
              <div class="form-group">
                <label class="col-sm-3" >EmployeeId:</label>
                <div class="col-sm-9">
                     @Html.DropDownListFor(m => m.EmployeeId, (IEnumerable<SelectListItem>)ViewData["EmployeeId"])
                </div>
              </div>
               <br />
              <div class="form-group">
                <label class="col-sm-3" >CustomerId:</label>
                <div class="col-sm-9">
                     @Html.DropDownListFor(m => m.CustomerId,(IEnumerable<SelectListItem>)ViewData["CustomerId"])
                </div>
              </div>
               <br />
              <div class="form-group">
                <label class="col-sm-3" >SalesOrderId:</label>
                <div class="col-sm-9">
                     @Html.DropDownListFor(m => m.SalesOrderId,(IEnumerable<SelectListItem>)ViewData["SalesOrderId"])
                </div>
              </div>
               <br />
              <div class="form-group">
                <label class="col-sm-3" for="time">Time:</label>
                <div class="col-sm-9">
                     @Html.TextBoxFor(m => m.Time, new { @class = "form-control", @id = "time", @type = "date" })
                </div>
              </div>
               <br />
              <div class="form-group">
                <label class="col-sm-3">PaymentMethod:</label>
                <div class="col-sm-9">
                     @Html.DropDownListFor(m => m.PaymentMethod,(IEnumerable<SelectListItem>)ViewData["paymentMethod"])
                </div>
              </div>
               <br />
               <div class="form-group">
                <label class="col-sm-3" for="discountPercent">DiscountPercent:</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.DiscountPercent, new { @class = "form-control " ,@id ="discountPercent"})
                </div>
              </div>
               <br />
            <br/>
                <input type="submit" value="Create" class="btn btn-default pull-right"/>
        </form>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
