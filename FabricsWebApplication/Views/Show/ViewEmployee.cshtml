@model IEnumerable<FabricsFactoryMethodPattern.Entities.Employee>
@{
    ViewBag.Title = "Supplier";
}

<hgroup class="title">
    <h2>Employee List</h2>
</hgroup>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <table class="table table-hover">
        <thead>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>BirthDay</th>
            <th>Email</th>
            <th>Address</th>
            <th>IdentityCardNumber</th>
            <th>Salary</th>
            <th>CellPhone</th>
            <th>DeskPhone</th>
            <th>JoinDate</th>
            <th>Degree</th>

        </thead>
        
        <tbody>
       @foreach (var ex in Model) { 
       
           <tr> 
                <td>
             @Html.DisplayFor(modelItem => ex.Id.Increment)
                 </td>
               <td>
             @Html.DisplayFor(modelItem => ex.FirstName)
                 </td>

               <td>
             @Html.DisplayFor(modelItem => ex.LastName)
                 </td>
                <td>
             @Html.DisplayFor(modelItem => ex.BirthDate)
                 </td>
               <td>
             @Html.DisplayFor(modelItem => ex.Email)
                 </td>
                 <td>
             @Html.DisplayFor(modelItem => ex.Address)
                 </td>
                <td>
             @Html.DisplayFor(modelItem => ex.IdentityCardNumber)
                 </td>
                <td>
             @Html.DisplayFor(modelItem => ex.Salary)
                 </td>
               <td>
                    @foreach(var cellphone in ex.CellPhones)
                    {
                       <p>@Html.DisplayFor(modelItem => cellphone.PhoneNumber)</p>
                    }
                        
                </td>
                <td>
                    @foreach(var deskphone in ex.DeskPhones)
                    {
                       <p>@Html.DisplayFor(modelItem => deskphone.PhoneNumber)</p>
                    }
                </td>
                <td>
             @Html.DisplayFor(modelItem => ex.JoinDate)
                 </td>
               <td>
             @Html.DisplayFor(modelItem => ex.Degree)
                 </td>
               
           </tr>      
       }
            </tbody>     
    </table>
   
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
