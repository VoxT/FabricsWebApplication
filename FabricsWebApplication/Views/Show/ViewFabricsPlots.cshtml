@model IEnumerable<FabricsFactoryMethodPattern.Entities.FabricsPlots>
@{
    ViewBag.Title = "FabricsPlots";
}

<hgroup class="title">
    <h2>Fabrics List</h2>
</hgroup>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <table>
        <tr>
            <th>IdFabrics</th>
            <th>Time</th>
        </tr>
       @foreach (var ex in Model) {
           <tr> 
                <td>
             @Html.DisplayFor(modelItem => ex.Id.Increment)
                 </td>
               <td>
             @Html.DisplayFor(modelItem => ex.Time)
                 </td> 
            </tr>   
       }
    </table>
   
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
