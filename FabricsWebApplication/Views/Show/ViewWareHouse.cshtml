@model IEnumerable<FabricsFactoryMethodPattern.Entities.WareHouse>
@{
    ViewBag.Title = "WareHouse";
}

<hgroup class="title">
    <h2>WareHouse List</h2>
</hgroup>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
             
  <table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Areage</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
       @foreach (var ex in Model) { 
       
           <tr> 
                <td>
             @Html.DisplayFor(modelItem => ex.Id.Increment)
                 </td>
               <td>
             @Html.DisplayFor(modelItem => ex.Name)
                 </td>  
                 <td>
             @Html.DisplayFor(modelItem => ex.Areage)
                 </td>
                <td>
             @Html.DisplayFor(modelItem => ex.Address)
                 </td>
           </tr>           
       }
    </tbody>
    </table>
   
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
